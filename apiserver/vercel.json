{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "server.js"
    },
    {
      "src": "/api/reviews",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "regions": ["dfw1"],
  "functions": {
    "server.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
} 